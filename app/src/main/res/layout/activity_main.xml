<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ListViewActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="RecyclerViewActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_super_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="SuperRecyclerViewActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_simple_super_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="SimpleSuperRecyclerViewActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_view_pager2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ViewPager2Activity"
        android:textAllCaps="false" />

</LinearLayout>
